<!--suppress AndroidDomInspection -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/splash_screen">

    <fragment
        android:id="@+id/splash_screen"
        android:name="com.regin.learnbox.splash.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splash_screen_to_home_screen"
            app:destination="@id/home_screen" />

    </fragment>

    <fragment
        android:id="@+id/home_screen"
        android:name="com.regin.learnbox.home.HomeFragment"
        android:label="Home"
        app:clearTask="true">

        <deepLink app:uri="regin.com/home" />

    </fragment>

</navigation>